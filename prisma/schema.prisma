// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  fullName  String?  // Полное имя
  avatarUrl String?  // URL аватара
  createdAt DateTime @default(now())

  professions     Profession[]
  searches        ResearcherSearch[]
  candidateChats  Chat[]        @relation("CandidateChats")
  researcherChats Chat[]        @relation("ResearcherChats")
  sentMessages    ChatMessage[]
}

model Profession {
  id        String   @id @default(uuid())
  userId    String
  name      String   // "Product Designer", "Frontend Developer"
  grade     String   // "Junior", "Middle", "Senior", "Lead", "Manager"
  salaryMin Int?     // Минимальная ЗП
  salaryMax Int?     // Максимальная ЗП
  status    String?  // "active_search" | "considering" | "not_searching"
  
  // New fields for extended flow
  employmentType String? // Полная, частичная, проект
  workFormat     String? // Офис, удалёнка, гибрид
  travelTime     String? // Время до работы
  businessTrips  Boolean? // Готовность к командировкам
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  graph Graph?
  chats Chat[] // Список чатов с ресерчерами

  @@index([userId])
}

model Graph {
  id           String   @id @default(uuid())
  professionId String   @unique
  content      Json     // Массив Trait карточек
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  profession Profession @relation(fields: [professionId], references: [id], onDelete: Cascade)
}

model ResearcherSearch {
  id        String   @id @default(uuid())
  userId    String
  query     String   // Текст поискового запроса (название должности)
  name      String?  // Название поиска
  grade     String?  // Грейд искомой должности
  salaryMin Int?     // Минимальный бюджет
  salaryMax Int?     // Максимальный бюджет
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  chats Chat[] // Список чатов с кандидатами

  @@index([userId])
}

model Chat {
  id                 String   @id @default(uuid())
  
  // Для кандидата: чат привязан к его профессии
  professionId       String?
  // Для ресерчера: чат привязан к его поисковому запросу  
  researcherSearchId String?
  
  // Участники чата
  candidateUserId    String   // ID кандидата (владелец профессии)
  researcherUserId   String   // ID ресерчера (владелец поискового запроса)
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  profession         Profession?       @relation(fields: [professionId], references: [id], onDelete: Cascade)
  researcherSearch   ResearcherSearch? @relation(fields: [researcherSearchId], references: [id], onDelete: Cascade)
  candidateUser      User              @relation("CandidateChats", fields: [candidateUserId], references: [id])
  researcherUser     User              @relation("ResearcherChats", fields: [researcherUserId], references: [id])
  messages           ChatMessage[]

  @@index([professionId])
  @@index([researcherSearchId])
  @@index([candidateUserId])
  @@index([researcherUserId])
  @@unique([candidateUserId, researcherUserId]) // Между двумя пользователями может быть только один чат
}

model ChatMessage {
  id        String   @id @default(uuid())
  chatId    String
  senderId  String   // ID отправителя
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  chat   Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender User @relation(fields: [senderId], references: [id])

  @@index([chatId])
  @@index([senderId])
}
